             Padding="2" 
             IsClippedToBounds="False"  
             HasShadow="True" 
             VerticalOptions="Center" 
             CornerRadius="5" 
             HorizontalOptions="Start">
        <Label FontSize="Micro"
               Text="{Binding MessageDateTime}" 
